<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingLeft="12dp"
              android:paddingRight="12dp">

    <TextView
        android:id="@+id/mTextViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/holo_blue_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.daisongsong.chartapp.book.widget.PriceItemView
            android:id="@+id/mPriceItemViewCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.example.daisongsong.chartapp.book.widget.PriceItemView
            android:id="@+id/mPriceItemViewMarketPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.example.daisongsong.chartapp.book.widget.PriceItemView
            android:id="@+id/mPriceItemViewLibProfit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.daisongsong.chartapp.book.widget.PriceItemView
            android:id="@+id/mPriceItemViewTotalMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.example.daisongsong.chartapp.book.widget.PriceItemView
            android:id="@+id/mPriceItemViewUnitCost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.example.daisongsong.chartapp.book.widget.PriceItemView
            android:id="@+id/mPriceItemViewCurrentPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>


